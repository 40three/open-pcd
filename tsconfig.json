{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "data/*",
                "*"
            ]
        },
        "lib": [
            "es2019",
            "ES6",
        ]
    },
    "include": [
        "abstractions/**/*",
        "build/**/*",
        "data/**/*"
    ]
}